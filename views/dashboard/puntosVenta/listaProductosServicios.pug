//- Tabla de la lista de  productos
section(class="w-full max-w-6xl mx-auto mt-3 bg-white rounded-2xl shadow-sm border border-gray-100")
  //- Header: buscador + botones
  .flex.items-center.justify-between.px-6.py-4.border-b.border-gray-100
    //- Buscador
    .relative.w-full.max-w-sm
      span(class="absolute inset-y-0 left-3 flex items-center text-gray-400 text-sm") üîç
      input(
        type="text" 
        placeholder="Buscar un producto o servicio"
        class="w-full pl-9 pr-3 py-2 text-sm rounded-lg border border-gray-200 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 placeholder-gray-400"
      )
    //- Botones derecha
    .flex.items-center.gap-3
      button(type="button" class="px-4 py-2 text-sm border border-gray-200 rounded-lg text-gray-600 hover:bg-gray-50 cursor-pointer")
        | Exportar a excel
      a(type="button" onClick="my_modal_4.showModal()" class="px-4 py-2 text-sm rounded-lg bg-indigo-600 text-white hover:bg-indigo-700 cursor-pointer")
        | + Agregar un producto
    
            
                



  //- Tabla
  .overflow-x-auto
    table(class="min-w-full text-sm")
      thead
        tr(class="bg-gray-50 text-xs font-semibold uppercase text-gray-500")
          th(class="text-center px-4 py-3") Producto
          th(class="text-center px-4 py-3") Disponible
          th(class="text-center px-4 py-3") Unidades Disponibles
          th(class="text-center px-4 py-3") Precio En Tienda
          th(class="text-center px-4 py-3") 

      tbody(class="divide-y divide-gray-100 text-gray-700")
        if listaProductos
          each lista in listaProductos

            //- Fila 1
            tr(class="hover:bg-gray-50")
              
              td(class="px-4 py-3")
                .flex.items-center.gap-3
                  //- avatar producto (placeholder)
                  .h-10.w-10.rounded-xl.bg-gray-100.flex.items-center.justify-center.text-xs.text-gray-400
                    span CC
                  .flex.flex-col
                    span(class="font-semibold text-gray-900")=lista.producto.nombreProductoServicio
                    span(class="text-xs text-gray-400")
              
              td(class="px-4 py-3 text-center")
                if lista.producto.activo == 1
                    p(class="bg-green-500 rounded-sm text-amber-50") SI
                else
                    p NO
                
                
              td(class="px-4 py-3 text-center font-semibold text-gray-900")=lista.unidadesDisponibles
              td(class="px-4 py-3 text-center font-semibold text-gray-900")=lista.producto.precio
              td(class="px-4 py-3 text-center text-gray-600") 
              td(class="px-4 py-3 text-center")
                a(href="/panel/puntosDeVenta/verInventarios/editar/"+lista.idProductoServicio+"?idPuntoVenta="+datosPunto.idPuntoVenta+""  class="inline-flex items-center px-2 py-1 text-xs border border-gray-200 rounded-md text-gray-600 hover:bg-gray-50")
                  | Editar
          
    include ../../layout/paginador.pug

    dialog(id="my_modal_4" class="modal")
        div(class="modal-box w-11/12 max-w-5xl")
         h3(class="text-lg font-bold flex items-center gap-3")  
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m20.25 7.5-.625 10.632a2.25 2.25 0 0 1-2.247 2.118H6.622a2.25 2.25 0 0 1-2.247-2.118L3.75 7.5m8.25 3v6.75m0 0-3-3m3 3 3-3M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125Z" />
            </svg>

            |Agregaras inventario a #{datosPunto.nombre} 
         p(class="py-4")
         div(class="modal-action")
          include ../../layout/agregarInventario.pug


            
           
            
           