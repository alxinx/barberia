section(class="max-w-6xl mx-auto space-y-6")
    // ===== CONTENEDOR PRINCIPAL RESPONSIVE =====
    div(class="grid grid-cols-4 lg:grid-cols-[minmax(0,320px),minmax(0,1fr)] gap-6")
        // ================= PERFIL IZQUIERDO =================
        aside(
            class="bg-white rounded-2xl shadow-sm border border-gray-100 p-5 sm:p-6 flex flex-col w-2xs"
        )
          // Avatar + nombre
          div(class="flex flex-col items-center text-center")
              div(class="w-24 h-24 sm:w-28 sm:h-28 rounded-full shadow-gray-900 shadow overflow-hidden bg-green-100 mb-4")
                      img(src="/images/avatar/ec1e0bce-e592-431e-8834-bc78b4196a78.png" alt="Profile" class="w-full h-full object-cover")
              h2(class="text-base sm:text-lg font-semibold text-slate-800")=barberData.nombreBarbero
              span(class="mt-1 inline-flex items-center px-3 py-1 rounded-full bg-green-50 tex[11px] sm:text-xs font-medium text-green-500") Barbero

          div(class="mt-5 grid grid-cols-2 gap-3 w-full")
              div(class="flex flex-col items-center justify-center rounded-xl bg-green-50 py-3")
                  span(class="text-base sm:text-lg font-semibold text-green-500") 1.23k
                  span(class="text-[11px] sm:text-xs text-slate-500") Servicios hechos

              div(class="flex flex-col items-center justify-center rounded-xl bg-green-50 py-3")
                  span(class="text-base sm:text-lg font-semibold text-green-500") $240.000
                  span(class="text-[11px] sm:text-xs text-slate-500") Tiket Promedio
            
          div(class="mt-6 border-t border-gray-200 pt-4 space-y-1 text-[13px] sm:text-sm")
              h3(class="text-[20px] font-semibold tracking-wide text-gray-600 mb-1 text-center") Perfil

              p(class="mt-3")
                  span(class="font-semibold text-slate-700") Nombre:
                  span(class="ml-1 text-gray-500") #{barberData.nombreBarbero} #{barberData.apellidoBarbero}
                  
              p(class="mt-3")
                span(class="font-semibold text-slate-700") Identificación:
                span(class="ml-1 text-gray-500")=barberData.identificacionBarbero
              
              p(class="mt-3")
                span(class="font-semibold text-slate-700") Whatsapp/celular:
                span(class="ml-1 text-gray-500")=barberData.whatsApp

              p(class="mt-3")
                span(class="font-semibold text-slate-700") Email:
                span(class="ml-1 text-gray-500 pl-2")=barberData.email

              p(class="mt-3")
                span(class="font-semibold text-slate-700") Sede:
                span(class="ml-1 text-gray-500")=barberData.barberia.nombre

              p(class="mt-3")
                span(class="font-semibold text-slate-700") Posición:
                span(class="ml-1 text-gray-500") Barbero
                
              p(class="mt-3")
                span(class="font-semibold text-slate-700") Estado:
                span(class="ml-1 text-gray-500")
                  if barberData.idBarberia === true
                    span Si
                  else 
                    span No

              
              p(class="mt-3")
                span(class="font-semibold text-slate-700") Inicio de labores:
                span(class="ml-1 text-gray-500")=barberData.createdAt
              
          // Botones
          div(class="mt-6 flex flex-col sm:flex-row gap-3")
              button#btnAbrirModal(
                  type="button"
                  class="w-full sm:flex-1 inline-flex justify-center items-center px-4 py-2.5 rounded-xl text-sm font-medium text-white bg-green-500 hover:bg-green-600 transition shadow-sm cursor-pointer"
              ) Editar
              button(
                  type="button"
                  class="w-full sm:flex-1 inline-flex justify-center items-center px-4 py-2.5 rounded-xl text-sm font-medium text-red-500 bg-red-50 hover:bg-red-100 transition cursor-pointer  "
              ) Suspender

        // ================= PANEL DERECHO (LISTA) =================
        section(class="bg-white rounded-2xl shadow-sm border border-gray-100 p-5 sm:p-6 flex flex-col w-3xl")

          nav(class="flex items-center gap-2 sm:gap-4 border-b border-gray-100 pb-3 mb-4 text-xs sm:text-sm overflow-x-auto no-scrollbar")
            button(class="inline-flex flex-shrink-0 items-center gap-2 px-4 py-2 rounded-full bg-green-500 text-white font-medium shadow-sm cursor-pointer")
              span Desempeño
            
            button(class="flex-shrink-0 px-4 py-2 rounded-full text-gray-500 hover:text-slate-800 hover:bg-gray-50 font-medium cursor-pointer") Comisiones
            
            button(class="flex-shrink-0 px-4 py-2 rounded-full text-gray-500 hover:text-slate-800 hover:bg-gray-50 font-medium cursor-pointer") Historial de ventas

             button(class="flex-shrink-0 px-4 py-2 rounded-full text-gray-500 hover:text-slate-800 hover:bg-gray-50 font-medium cursor-pointer") Documentación


          div(class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 mb-4")
            h2(class="text-sm sm:text-base font-semibold text-slate-800") Project List

            // Campo de búsqueda (se hace más ancho en desktop)
            div(class="relative w-full sm:w-64")
              span(class="pointer-events-none absolute inset-y-0 left-3 flex items-center text-gray-400 text-xs")
                svg(xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor")
                  path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35M11 18a7 7 0 100-14 7 7 0 000 14z")
              input(
                type="text"
                placeholder="Busca"
                class="w-full rounded-xl border border-gray-200 bg-gray-50 pl-9 pr-3 py-2 text-xs sm:text-sm text-slate-800 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
              )
        
